<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/yellow"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_choiceDestination"
        android:textSize="20sp"
        android:typeface="sans"
        android:layout_marginTop="18dip"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_choiceDestination"/>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/imgbt_snow"
        android:layout_below="@id/txt_choiceDestination"
        android:layout_marginTop="18dip"
        android:background="@mipmap/ic_imgbt_snow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/imgbt_sea"
        android:layout_below="@id/imgbt_snow"
        android:layout_marginTop="18dip"
        android:background="@mipmap/ic_imgbt_sea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/imgbt_mountain"
        android:layout_below="@id/imgbt_sea"
        android:layout_marginTop="18dip"
        android:background="@mipmap/ic_imgbt_mountain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/imgbt_rural"
        android:layout_below="@id/imgbt_mountain"
        android:layout_marginTop="18dip"
        android:background="@mipmap/ic_imgbt_rural"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/imgbt_city"
        android:layout_below="@id/imgbt_rural"
        android:layout_marginTop="18dip"
        android:background="@mipmap/ic_imgbt_city"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
